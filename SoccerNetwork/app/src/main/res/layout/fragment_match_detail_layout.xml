<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chỉnh sửa trận đấu"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="55px"
        android:textStyle="bold"
        android:textColor="#2a8bda"
        android:layout_marginBottom="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tên trung tâm: "
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:minWidth="300px"
            android:layout_marginTop="7dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInforMatchBranchName"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView9"
            android:layout_marginBottom="7dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tên sân"
            android:id="@+id/textView6"
            android:minWidth="300px"
            android:layout_below="@+id/txtInforMatchBranchName"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInforMatchFGName"
            android:layout_alignTop="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_below="@+id/txtInforMatchBranchName"
            android:layout_marginBottom="7dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Giờ"
            android:id="@+id/textView7"
            android:minWidth="300px"
            android:layout_below="@+id/txtInforMatchFGName"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtInforMatchTime"
            android:layout_toEndOf="@+id/textView7"
            android:layout_below="@+id/txtInforMatchFGName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ngày"
            android:id="@+id/textView11"
            android:minWidth="300px"
            android:layout_below="@+id/txtInforMatchTime" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtInforMatchDate"
            android:layout_toEndOf="@+id/textView11"
            android:layout_marginBottom="7dp"
            android:layout_below="@+id/txtInforMatchTime"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Giá"
            android:id="@+id/textView8"
            android:minWidth="300px"
            android:layout_below="@+id/txtInforMatchDate"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInforMatchPrice"
            android:layout_below="@+id/txtInforMatchDate"
            android:layout_toEndOf="@+id/textView8"
            android:layout_marginBottom="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Địa chỉ"
            android:id="@+id/textView10"
            android:minWidth="300px"
            android:layout_below="@+id/txtInforMatchPrice"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInforMatchAddress"
            android:layout_below="@+id/txtInforMatchPrice"
            android:layout_toEndOf="@+id/textView10"
            android:layout_marginBottom="7dp" />




    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancelInforMatch"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

</LinearLayout>